        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:strokeColor="#4169E1"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/textViewLobby5"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginStart="42dp"
